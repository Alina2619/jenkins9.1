pipeline {
    agent any

    environment {
        // You can define environment variables here if needed, e.g.
        // MY_VAR = 'some_value'
    }

    stages {
        // Build Stage: Compile or build your project
        stage('Build') {
            steps {
                script {
                    echo 'Compiling code...'
                    bat 'mvn clean install'  // Replace with your actual build command, e.g., 'mvn', 'gradle', etc.
                }
            }
        }

        // Test Stage: Run unit tests
        stage('Test') {
            steps {
                script {
                    echo 'Running tests...'
                    bat 'mvn test'  // Replace with your actual test command
                }
            }
        }

        // Deploy Stage: Deploy the application
        stage('Deploy') {
            steps {
                script {
                    echo 'Deploying application...'
                    bat './deploy.bat'  // Adjust the deployment command as necessary
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
        always {
            echo 'Pipeline execution finished.'
        }
    }
}



