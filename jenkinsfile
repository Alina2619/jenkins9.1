pipeline {
    agent any

    environment {
        // You can define environment variables here if needed
        // Example: MY_ENV_VAR = "some_value"
    }

    stages {
        // Build Stage: Compile or build your project
        stage('Build') {
            steps {
                script {
                    echo 'Compiling code...'
                    // Replace sh with bat for Windows
                    bat 'mvn clean install'  // For Java Maven projects, adjust the command as needed
                }
            }
        }

        // Test Stage: Run unit tests
        stage('Test') {
            steps {
                script {
                    echo 'Running tests...'
                    // Replace sh with bat for Windows
                    bat 'mvn test'  // Running tests for Maven projects
                }
            }
        }

        // Deploy Stage: Deploy the application
        stage('Deploy') {
            steps {
                script {
                    echo 'Deploying application...'
                    // Replace sh with bat for Windows
                    bat './deploy.bat'  // Replace with actual deployment script for Windows
                }
            }
        }
    }

    post {
        success {
            // Actions to take if the pipeline completes successfully
            echo 'Pipeline completed successfully!'
        }
        failure {
            // Actions to take if the pipeline fails
            echo 'Pipeline failed!'
        }
        always {
            // Actions to take regardless of success or failure
            echo 'Pipeline execution finished.'
        }
    }
}


