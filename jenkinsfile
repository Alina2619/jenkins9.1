pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install Maven') {
            steps {
                script {
                    // Download and extract Maven
                    def mavenHome = "${env.WORKSPACE}/maven"
                    sh 'curl -sL https://archive.apache.org/dist/maven/maven-3/3.8.1/binaries/apache-maven-3.8.1-bin.tar.gz | tar xz -C ${mavenHome} --strip-components=1'
                    // Set MAVEN_HOME environment variable
                    env.MAVEN_HOME = "${mavenHome}"
                    env.PATH = "${mavenHome}/bin:${env.PATH}"
                }
            }
        }

        stage('Build') {
            steps {
                script {
                    echo 'Compiling code...'
                    bat 'mvn clean install'  // Using Maven from the local directory
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    echo 'Running tests...'
                    bat 'mvn test'  // Run tests using Maven
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    echo 'Deploying application...'
                    bat './deploy.bat'  // Or any deploy script you are using
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}





