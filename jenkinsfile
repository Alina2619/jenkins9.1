pipeline {
    agent any

    environment {
        MY_ENV_VAR = "some_value"  // Example of setting an environment variable
    }

    stages {
        // Build Stage: Compile or build your project
        stage('Build') {
            steps {
                script {
                    echo 'Compiling code...'
                    // Run Maven to build the project
                    sh 'mvn clean install'  // For Java Maven projects
                }
            }
        }

        // Test Stage: Run unit tests
        stage('Test') {
            steps {
                script {
                    echo 'Running tests...'
                    // Run Maven tests
                    sh 'mvn test'  // For Maven projects
                }
            }
        }

        // Deploy Stage: Deploy the application
        stage('Deploy') {
            steps {
                script {
                    echo 'Deploying application...'
                    // Run a deployment script (replace this with your actual deploy process)
                    sh './deploy.sh'  // Replace with your custom deployment script
                }
            }
        }
    }

    post {
        success {
            // Actions to take if the pipeline completes successfully
            echo 'Pipeline completed successfully!'
        }
        failure {
            // Actions to take if the pipeline fails
            echo 'Pipeline failed!'
        }
        always {
            // Actions to take regardless of success or failure
            echo 'Pipeline execution finished.'
        }
    }
}

